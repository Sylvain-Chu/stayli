# ========================================
# DATABASE (Required for all environments)
# ========================================
DATABASE_URL="postgresql://user:strong-password@localhost:5432/stayli?schema=public"

# PostgreSQL (for Docker - dev only)
POSTGRES_DB=stayli
POSTGRES_USER=stayli
POSTGRES_PASSWORD=generate-a-strong-password-here

# ========================================
# AUTHENTICATION (Required for all environments)
# ========================================
# NextAuth secret for JWT signing (generate with: openssl rand -base64 32)
# CRITICAL: Must be different between dev and production
NEXTAUTH_SECRET="your-secret-key-here"

# Application URL (use https in production)
NEXTAUTH_URL="http://localhost:3000"

# ========================================
# LOGGING (Optional)
# ========================================
LOG_LEVEL=info