{{> header }}
{{> sidebar }}

<h1>{{t 'properties.editTitle'}}</h1>
<form method='post' action='/properties/{{property.id}}/edit'>
  <div>
  <label>{{t 'properties.name'}}</label>
    <input name='name' value='{{property.name}}' required />
  </div>
  <div>
  <label>{{t 'properties.address'}}</label>
    <input name='address' value='{{property.address}}' />
  </div>
  <div>
  <label>{{t 'properties.description'}}</label>
    <textarea name='description'>{{property.description}}</textarea>
  </div>
  <button type='submit'>{{t 'common.save'}}</button>
</form>
<p><a href='/properties'>{{t 'common.back'}}</a></p>

{{> footer }}