{{> header }}
{{> sidebar }}

<div class="page-header">
  <div class="page-header-left">
    <a href="/clients/{{client.id}}" class="btn btn-ghost btn-back">
      <span data-feather="arrow-left"></span>
      <span>{{t 'common.back'}}</span>
    </a>
    <h1>{{t 'clients.editTitle'}}</h1>
  </div>
</div>

<div class="form-container">
  <div class="form-card">
    <div class="card-header">
      <h2>{{t 'clients.clientInfo'}}</h2>
    </div>
    <div class="card-body">
      <form method="post" action="/clients/{{client.id}}/edit" class="form-modern">
        <div class="form-row">
          <div class="form-group">
            <label for="firstName">{{t 'clients.firstName'}} <span class="required">*</span></label>
            <input 
              type="text" 
              id="firstName" 
              name="firstName" 
              value="{{client.firstName}}" 
              required 
              class="form-input"
              placeholder="{{t 'clients.firstName'}}"
            />
          </div>

          <div class="form-group">
            <label for="lastName">{{t 'clients.lastName'}} <span class="required">*</span></label>
            <input 
              type="text" 
              id="lastName" 
              name="lastName" 
              value="{{client.lastName}}" 
              required 
              class="form-input"
              placeholder="{{t 'clients.lastName'}}"
            />
          </div>
        </div>

        <div class="form-row">
          <div class="form-group">
            <label for="email">
              <span data-feather="mail"></span>
              {{t 'clients.email'}} <span class="required">*</span>
            </label>
            <input 
              type="email" 
              id="email" 
              name="email" 
              value="{{client.email}}" 
              required 
              class="form-input"
              placeholder="exemple@email.com"
            />
          </div>

          <div class="form-group">
            <label for="phone">
              <span data-feather="phone"></span>
              {{t 'clients.phone'}}
            </label>
            <input 
              type="tel" 
              id="phone" 
              name="phone" 
              value="{{client.phone}}" 
              class="form-input"
              placeholder="+33 6 12 34 56 78"
            />
          </div>
        </div>

        <div class="form-actions">
          <a href="/clients/{{client.id}}" class="btn btn-ghost btn-cancel">
            <span>{{t 'common.cancel'}}</span>
          </a>
          <button type="submit" class="btn btn-primary">
            <span data-feather="save"></span>
            <span>{{t 'common.save'}}</span>
          </button>
        </div>
      </form>
    </div>
  </div>
</div>

{{> footer }}