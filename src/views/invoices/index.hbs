{{> header }}
{{> sidebar }}

<h1>Invoices</h1>
<p>
  <a href='/invoices/create'>Create a new invoice</a>
</p>
<hr />
<ul>
  {{#each invoices}}
    <li>
      <strong>{{this.invoiceNumber}}</strong>
      —
      {{this.bookingId}}
      —
      {{this.amount}}€ —
      {{this.status}}
      <button
        data-delete
        data-id='{{this.id}}'
        data-base='/invoices'
        data-confirm='Delete this invoice?'
      >Delete</button>
      <a href='/invoices/{{this.id}}'>View</a>
      <a href='/invoices/{{this.id}}/edit'>Edit</a>
    </li>
  {{else}}
    <li>No invoices yet.</li>
  {{/each}}
</ul>

{{> footer }}