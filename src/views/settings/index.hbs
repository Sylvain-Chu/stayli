{{> header }}
{{> sidebar }}

<div class="settings-container">
  <h1>{{t 'settings.title'}}</h1>
  
  <form method="post" action="/settings" class="settings-form">
    <div class="form-section">
      <h2>{{t 'settings.companyInfo'}}</h2>
      
      <div class="form-group">
        <label for="companyName">{{t 'settings.companyName'}}</label>
        <input 
          type="text" 
          id="companyName" 
          name="companyName" 
          value="{{settings.companyName}}" 
          placeholder="{{t 'settings.companyNamePlaceholder'}}"
        />
      </div>

      <div class="form-group">
        <label for="companyAddress">{{t 'settings.companyAddress'}}</label>
        <textarea 
          id="companyAddress" 
          name="companyAddress" 
          rows="4"
          placeholder="{{t 'settings.companyAddressPlaceholder'}}"
        >{{settings.companyAddress}}</textarea>
      </div>
    </div>

    <div class="form-section">
      <h2>{{t 'settings.financialSettings'}}</h2>
      
      <div class="form-group">
        <label for="currency">{{t 'settings.currency'}}</label>
        <select id="currency" name="currency">
          <option value="EUR" {{#if (eq settings.currency "EUR")}}selected{{/if}}>EUR (€)</option>
          <option value="USD" {{#if (eq settings.currency "USD")}}selected{{/if}}>USD ($)</option>
          <option value="GBP" {{#if (eq settings.currency "GBP")}}selected{{/if}}>GBP (£)</option>
          <option value="CHF" {{#if (eq settings.currency "CHF")}}selected{{/if}}>CHF</option>
          <option value="CAD" {{#if (eq settings.currency "CAD")}}selected{{/if}}>CAD</option>
          <option value="JPY" {{#if (eq settings.currency "JPY")}}selected{{/if}}>JPY (¥)</option>
        </select>
      </div>

      <div class="form-group">
        <label for="defaultTaxRate">{{t 'settings.defaultTaxRate'}}</label>
        <input 
          type="number" 
          id="defaultTaxRate" 
          name="defaultTaxRate" 
          value="{{settings.defaultTaxRate}}" 
          min="0" 
          max="100" 
          step="0.01"
          placeholder="20.0"
        />
        <small>{{t 'settings.taxRateHelp'}}</small>
      </div>
    </div>

    <div class="form-actions">
      <button type="submit" class="btn-primary">{{t 'common.save'}}</button>
    </div>
  </form>
</div>

{{> footer }}
