{{> header }}
{{> sidebar }}

<div class="page-header">
  <div class="page-header-left">
    <a href="/properties/{{property.id}}" class="btn btn-ghost btn-back">
      <span data-feather="arrow-left"></span>
      <span>{{t 'common.back'}}</span>
    </a>
    <h1>{{t 'properties.editTitle'}}</h1>
  </div>
</div>

<div class="form-container">
  <div class="form-card">
    <div class="card-header">
      <h2>{{t 'properties.propertyInfo'}}</h2>
    </div>
    <div class="card-body">
      <form method="post" action="/properties/{{property.id}}/edit" class="form-modern">
        <div class="form-row">
          <div class="form-group">
            <label for="name">
              <span data-feather="home"></span>
              {{t 'properties.name'}} <span class="required">*</span>
            </label>
            <input 
              type="text" 
              id="name" 
              name="name" 
              value="{{property.name}}" 
              required 
              class="form-input"
              placeholder="{{t 'properties.name'}}"
            />
          </div>

          <div class="form-group">
            <label for="address">
              <span data-feather="map-pin"></span>
              {{t 'properties.address'}}
            </label>
            <input 
              type="text" 
              id="address" 
              name="address" 
              value="{{property.address}}" 
              class="form-input"
              placeholder="{{t 'properties.address'}}"
            />
          </div>
        </div>

        <div class="form-group">
          <label for="description">
            <span data-feather="file-text"></span>
            {{t 'properties.description'}}
          </label>
          <textarea 
            id="description" 
            name="description" 
            class="form-textarea"
            placeholder="{{t 'properties.descriptionLabel'}}"
            rows="4">{{property.description}}</textarea>
        </div>

        <div class="form-actions">
          <a href="/properties/{{property.id}}" class="btn btn-ghost btn-cancel">
            <span>{{t 'common.cancel'}}</span>
          </a>
          <button type="submit" class="btn btn-primary">
            <span data-feather="save"></span>
            <span>{{t 'common.save'}}</span>
          </button>
        </div>
      </form>
    </div>
  </div>
</div>

{{> footer }}