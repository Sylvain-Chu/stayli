{{> header }}
{{> sidebar }}

<h1>{{t 'invoices.title'}}</h1>
<p>
  <a href='/invoices/create'>{{t 'invoices.addNew'}}</a>
</p>
<hr />
<ul>
  {{#each invoices}}
    <li>
      <strong>{{this.invoiceNumber}}</strong>
      —
      {{this.bookingId}}
      —
      {{this.amount}}€ —
      {{this.status}}
      <button
        data-delete
        data-id='{{this.id}}'
        data-base='/invoices'
        data-confirm='{{t "invoices.confirmDelete"}}'
      >{{t 'common.delete'}}</button>
      <a href='/invoices/{{this.id}}'>{{t 'common.view'}}</a>
      <a href='/invoices/{{this.id}}/edit'>{{t 'common.edit'}}</a>
    </li>
  {{else}}
    <li>{{t 'invoices.noInvoices'}}</li>
  {{/each}}
</ul>

{{> footer }}